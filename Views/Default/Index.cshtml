
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_DefaultHeadComponentPartial")
<body>
    @await Component.InvokeAsync("_DefaultNavbarComponentPartial")
    @await Component.InvokeAsync("_DefaultSliderComponentPartial")
    @await Component.InvokeAsync("_DefaultTopDiscountComponentPartial")
    @await Component.InvokeAsync("_DefaultCategoryComponentPartial")
    <section id="allproducts">
        @await Component.InvokeAsync("_DefaultAllProductComponentPartial")
    </section>
    <section id="lowprices">
    @await Component.InvokeAsync("_DefaultUnderDiscountComponentPartial")
    </section>
    @await Component.InvokeAsync("_DefaultSellingProductComponentPartial")
    @await Component.InvokeAsync("_DefaultEmailComponentPartial")
    <section class="py-5 my-5">
        <div class="container-fluid">

            <div class="bg-warning py-5 rounded-5" style="background-image: url('images/bg-pattern-2.png') no-repeat;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/FoodMart-1.0.0/images/phone.png" alt="phone" class="image-float img-fluid">
                        </div>
                        <div class="col-md-8">
                            <h2 class="my-5"> FoodMart Uygulaması ile daha hızlı alışveriş yapın</h2>
                            <p>Uygulamamızı şimdi indirerek deneyimleyin. Kullanımı kolay arayüzüyle hızlı, güvenli ve pratik çözümler sunar. Her cihazda sorunsuz çalışır ve size özel özelliklerle donatılmıştır. Sadece bir tıklamayla kurulumu tamamlayabilir, tüm avantajlardan hemen yararlanmaya başlayabilirsiniz. Mobil veya masaüstü fark etmeden en iyi deneyim sizi bekliyor. Aşağıdaki bağlantıdan kolayca erişebilirsiniz.</p>
                            <div class="d-flex gap-2 flex-wrap">
                                <img src="/FoodMart-1.0.0/images/app-store.jpg" alt="app-store">
                                <img src="/FoodMart-1.0.0/images/google-play.jpg" alt="google-play">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    @await Component.InvokeAsync("_DefaultWantedComponentPartial")
    @await Component.InvokeAsync("_DefaultFooterComponentPartial")
    <div id="footer-bottom">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 copyright">
                    <p>© 2023 Foodmart. All rights reserved.</p>
                </div>
                <div class="col-md-6 credit-link text-start text-md-end">
                    <p>Free HTML Template by <a href="https://templatesjungle.com/">TemplatesJungle</a> Distributed by <a href="https://themewagon">ThemeWagon</a></p>
                </div>
            </div>
        </div>
    </div>
    <script src="/FoodMart-1.0.0/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="/FoodMart-1.0.0/js/plugins.js"></script>
    <script src="/FoodMart-1.0.0/js/script.js"></script>
</body>
</html>
