@model List<FoodMartMongo.Dtos.ProductDtos.ResultProductDto>
<div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasCart" aria-labelledby="My Cart">
    <div class="offcanvas-header justify-content-center">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Sepete Ekle</span>
                <span class="badge bg-primary rounded-pill">@Model.Count()</span> <!-- Ürün sayısı -->
            </h4>

            <ul class="list-group mb-3">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">@item.ProductName</h6>
                            <small class="text-body-secondary">Stok: @item.StockCount</small>
                        </div>
                        <span class="text-body-secondary">@item.ProductPrice.ToString("C")</span>
                    </li>
                }
            </ul>

            <button class="w-100 btn btn-primary btn-lg" type="submit">Ödeme işlemine devam edin</button>
        </div>
    </div>
</div>
